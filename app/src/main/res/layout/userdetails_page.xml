<?xml version="1.0" encoding="utf-8"?>


<!-- TODO: Update blank fragment layout -->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Kullanıcı Detayları"
            android:textColor="#D31406"

            android:textSize="24sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/filteredUserImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                app:srcCompat="@mipmap/ic_launcher"
                tools:srcCompat="@tools:sample/avatars"
                />

            <LinearLayout
                android:layout_margin="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/filteredUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:inputType="textPersonName"
                    android:minHeight="24dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/filteredUserSurname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:inputType="textPersonName"
                    android:minHeight="24dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/filteredUserMail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:inputType="textEmailAddress"
                    android:minHeight="24dp"
                    android:textStyle="italic" />
                <TextView
                    android:id="@+id/filteredUserStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:minHeight="24dp"
                    android:textStyle="italic" />
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/textPhoneNrInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:ems="10"
            android:text="Telefon Numarası"
            android:minHeight="10dp" />
        <TextView
            android:id="@+id/filteredUserPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:ems="10"
            android:minHeight="36dp" />


        <TextView
            android:id="@+id/textDepartmentInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:ems="10"
            android:text="Okuduğu Bölüm"
            android:minHeight="10dp" />
        <TextView
            android:id="@+id/filteredUserDepartment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:ems="10"
            android:minHeight="36dp" />

        <TextView
            android:id="@+id/textDistanceInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:ems="10"
            android:text="Tercih Edilen Uzaklık (Metre)"
            android:minHeight="10dp" />
        <TextView
            android:id="@+id/filteredUserDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:ems="10"
            android:minHeight="36dp" />

        <TextView
            android:id="@+id/textShareInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:ems="10"
            android:text="Kalabileceği/Paylaşabileceği Süre"
            android:minHeight="10dp" />
        <TextView
            android:id="@+id/filteredUserTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:ems="10"
            android:minHeight="36dp" />

        <Button
            android:id="@+id/viaWhatsappButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="WhatsApp ile iletişim" />
        <Button
            android:id="@+id/viaMailButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Mail ile iletişim" />


    </LinearLayout>
</ScrollView>